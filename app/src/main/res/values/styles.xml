<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base calculator button -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="BtnDark" parent="CalcButton"/>

    <style name="BtnGray" parent="CalcButton">
        <item name="android:backgroundTint">#A5A5A5</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BtnOrange" parent="CalcButton">
        <item name="android:backgroundTint">#FF9500</item>
    </style>

</resources>
